{
  "presets": ["@babel/preset-env", "next/babel", "@zeit/next-typescript/babel"],
  "plugins": [
    "@babel/plugin-proposal-optional-chaining",
    "@babel/plugin-transform-runtime",
    [
      "module-resolver",
      {
        "cwd": "babelrc",
        "alias": {
          "@types": "./typings/index.d.ts",
          "@": "./app",
          "@lib": "./app/lib",
          "@components": "./app/components",
          "@static": "./app/static",
          "@vars": "./app/variables"
        }
      }
    ],
    [
      "styled-components",
      {
        "ssr": true,
        "displayName": true,
        "preprocess": false
      }
    ]
  ]
}
